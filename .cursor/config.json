{
    "editor": {
        "fontSize": 14,
        "fontFamily": "Consolas, 'Courier New', monospace",
        "lineHeight": 1.5,
        "tabSize": 4,
        "insertSpaces": true,
        "wordWrap": "on",
        "minimap": {
            "enabled": true
        }
    },
    "files": {
        "exclude": {
            "**/.git": true,
            "**/.svn": true,
            "**/.hg": true,
            "**/CVS": true,
            "**/.DS_Store": true,
            "**/Thumbs.db": true
        }
    },
    "search": {
        "exclude": {
            "**/node_modules": true,
            "**/bower_components": true,
            "**/*.code-search": true
        }
    }
} 